<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BaseTP1" x:Class="BaseTP1.fenetrePrincipale"
        Title="Administrateur de Tournoi" Height="350" Width="525">
    <DockPanel>
        <Menu MinHeight="20" DockPanel.Dock="Top">
            <MenuItem Header="Fichier">
                <MenuItem Header="Ouvrir"/>
                <MenuItem Header="Sauvegarder"/>
            </MenuItem>
            <Separator/>
        </Menu>
        <Button DockPanel.Dock="Bottom" Content="Test lecture" Height="23"  Margin="0,10,0,10" x:Name="button1"  Width="99" Click="button1_Click" />
        <DataGrid Margin="10" MinWidth="200" DockPanel.Dock="Left" x:Name="dgTournois"/>
        <DataGrid Margin="10" MinWidth="200" DockPanel.Dock="Right" x:Name="dgJoueur"/>

        <local:FlecheSelectionControle HorizontalAlignment="Center"  VerticalAlignment="center"/>

    </DockPanel>
</Window>
